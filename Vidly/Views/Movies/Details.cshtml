@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>@Model.Genre.GenreName</li>
    <li>Released Date @Model.ReleasedDate.ToLongDateString()</li>
    <li>Released Date @Model.DateAdded.ToLongDateString()</li>
    <li>Number in Stock @Model.NumberInStock</li>
</ul>