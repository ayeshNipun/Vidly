@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => Model.Name)
        @Html.TextBoxFor(c => Model.Name, new {@class = "form-control"})
    </div>
    
    <div class="form-group">
        @Html.LabelFor(c => Model.Birthdate)
        @Html.TextBoxFor(c => Model.Birthdate, new {@class = "form-control"})
    </div>
    
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => Model.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>
}