@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-2">Movies</h2>

<table class="table">
    <thead>
    <tr>
        <th>Movie Name</th>
        <th>Genre</th>
    </tr>
    </thead>
    
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Genre.GenreName</td>
            </tr>
        }
    </tbody>
</table>

