@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-2">Movies</h2>

<a type="button" class="btn btn-primary" href="/Movies/New">Add a Movie</a>

<table class="table">
    <thead>
    <tr>
        <th>Movie Name</th>
        <th>Genre</th>
    </tr>
    </thead>
    
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", 
                        new {id = movie.Id}, null)</td>
                <td>@movie.Genre.GenreName</td>
            </tr>
        }
    </tbody>
</table>

